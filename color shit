JFrame frame=new JFrame();   
     frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);   
     ImageIcon img = new ImageIcon("471803.jpg");   
     JLabel imgLabel = new JLabel(img);  put image to label
   
     frame.getLayeredPane().add(imgLabel, new Integer(Integer.MIN_VALUE));// put image label tp LayeredPan  
     imgLabel.setBounds(0,0,img.getIconWidth(), img.getIconHeight());//put imagelabel location  
     Container cp=frame.getContentPane();   
     cp.setLayout(null); // absolute layout
     ((JPanel)cp).setOpaque(false); shit works 
